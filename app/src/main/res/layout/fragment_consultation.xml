<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsultationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="25dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nats_regular"
            android:text="CONSULTATION"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/textView58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nats_regular"
            android:text="COMPLETE YOUR DETAILS"
            android:textColor="@color/black"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center_vertical"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitStart"
                android:src="@drawable/drawable_purple_rect" />

            <androidx.cardview.widget.CardView
                android:id="@+id/section1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:clickable="true"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/section1t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/baloo2"
                        android:text="Section 1"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp">

                        <TextView
                            android:id="@+id/section1perc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/baloo2"
                            android:text="100%"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <com.tenclouds.gaugeseekbar.GaugeSeekBar
                            android:id="@+id/sectionprogress1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:progress="30"
                            app:progress="0.75"
                            app:interactive="false"
                            app:progressGradient="@array/section_one"
                            app:startAngleDegrees="0"
                            app:thumbColor="@android:color/transparent"
                            app:thumbDrawable="@android:color/transparent"
                            app:thumbRadius="0dp"
                            app:trackGradient="@array/consultation_track_color" />
                    </RelativeLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="25dp">

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="60dp"
                android:layout_height="60dp"
