                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <com.tenclouds.gaugeseekbar.GaugeSeekBar
                            android:id="@+id/sectionprogress2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:progressTint="@color/blue"
