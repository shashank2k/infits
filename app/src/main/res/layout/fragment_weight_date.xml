<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    tools:context=".WeightDateFragment"
    app:cardElevation="0dp"
    app:cardCornerRadius="10dp"
    android:background="@color/white"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:mcv_tileWidth="35dp"
        app:mcv_tileHeight="35dp"
        android:padding="5dp"
        android:layout_gravity="center"
        app:mcv_arrowColor="@color/weightcolor"
        app:mcv_firstDayOfWeek="sunday"
        app:mcv_monthLabels="@array/month"
        app:mcv_leftArrowMask="@drawable/ic_keyboard_arrow_left_black_24dp"
        app:mcv_rightArrowMask="@drawable/ic_keyboard_arrow_right_black_24dp"
        app:mcv_selectionColor="#4A9DFF"
        app:mcv_showOtherDates="all"
        app:mcv_weekDayTextAppearance="@style/CustomCalendarWeek"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/caldetails" />

    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70"
        android:fontFamily="@font/nats_regular"
        android:textColor="#545454"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="-20dp"
        android:letterSpacing="0"
        android:layout_marginBottom="-20dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/upline"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_gravity="center"
        android:paddingLeft="183dp"
        android:paddingRight="183dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/upline"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/btnadd"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/weightcolor"
        android:text="Save"
        android:fontFamily="@font/nats_regular"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="30dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>