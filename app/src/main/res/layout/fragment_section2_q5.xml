    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="0dp"
        android:layout_height="587dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/multiple_choice_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

        <LinearLayout
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="454dp"
            android:layout_marginTop="10dp"
            android:layout_alignTop="@+id/textView77"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="15dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/imageView27"
            app:layout_constraintStart_toStartOf="@+id/imageView27"
            app:layout_constraintTop_toBottomOf="@+id/textView77">

            <CheckBox
                android:id="@+id/dia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/radiobtn_off"
                android:fontFamily="@font/nats_regular"
                android:text="Diabetes"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />
<!--            Hypothyroidism-->

            <CheckBox
                android:id="@+id/hyperthy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/radiobtn_off"
                android:fontFamily="@font/nats_regular"
                android:text="Hyperthyroidism"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <CheckBox
                android:id="@+id/hypothy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/radiobtn_off"
                android:fontFamily="@font/nats_regular"
                android:text="Hypothyroidism"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />
