<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".StepsFragment">


    <RadioGroup
        android:id="@+id/toggle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/outline"
        android:checkedButton="@+id/week_btn_steps"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginHorizontal="25dp">

        <RadioButton
            android:id="@+id/customdates_btn_steps"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/switch_steps_left"
            android:button="@null"
            android:fontFamily="@font/nats_regular"
            android:gravity="center"
            android:text="Custom Dates"
            android:textSize="10sp"
            android:textColor="@drawable/switch_text"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/year_btn_steps"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/switch_off"
            android:button="@null"
            android:textSize="10sp"
            android:fontFamily="@font/nats_regular"
            android:gravity="center"
            android:text="Year"
            android:textColor="@drawable/switch_text" />

        <RadioButton
            android:id="@+id/month_btn_steps"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/switch_off"
            android:textSize="10sp"
            android:button="@null"
            android:fontFamily="@font/nats_regular"
            android:gravity="center"
            android:text="Month"
            android:textColor="@drawable/switch_text" />

        <RadioButton
            android:id="@+id/week_btn_steps"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/switch_steps_right"
            android:textSize="10sp"
            android:button="@null"
            android:fontFamily="@font/nats_regular"
            android:gravity="center"
            android:text="Week"
            android:textColor="@drawable/switch_text" />
    </RadioGroup>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>