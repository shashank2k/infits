<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/doctorpic"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:fontFamily="@font/nats_regular"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:layout_weight="0.1"/>
        <ImageButton
            android:id="@+id/set_reminder"
            android:layout_width="102dp"
            android:layout_height="50dp"
            android:background="@drawable/set_reminder"/>
    </LinearLayout>
    <TextView
        android:id="@+id/notes"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/Loremipsum"
        android:textColor="#6A6A6A"
        android:layout_marginStart="90dp"
        android:layout_marginTop="-20dp"
        android:textSize="12sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:paddingStart="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/calender_icon"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09/03/2002"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/nats_regular"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/clock_icon"/>
        <TextView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:00 pm"
            android:layout_marginStart="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/nats_regular"/>
    </LinearLayout>
    <TextView
        android:id="@+id/noofviewers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No of viewers"
        android:visibility="gone"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/nats_regular"
        android:gravity="end"/>
</LinearLayout>