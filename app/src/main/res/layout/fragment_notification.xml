<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Notification">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/textView67"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/nats_regular"
            android:text="NOTIFICATION"
            android:textColor="@color/black"
            android:textSize="26sp" />

        <ImageButton
            android:id="@+id/imgback"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="23dp"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24"
            app:tint="@color/black" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="33dp"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/step_tracker_notification"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Step Tracker"
            android:textSize="15sp"
            android:fontFamily="@font/nats_regular"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/step_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="33dp"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/water_tracker_notification"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Water Tracker"
            android:textSize="15sp"
            android:fontFamily="@font/nats_regular"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/water_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="33dp"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/sleep_tracker_notification"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sleep Tracker"
            android:textSize="15sp"
            android:fontFamily="@font/nats_regular"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/sleep_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="33dp"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/calories_notification"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Calories Tracker"
            android:textSize="15sp"
            android:fontFamily="@font/nats_regular"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/calorie_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

