<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame23"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".OTPVerified">

    <ImageView
        android:id="@+id/imglock"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/otp_verified_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/nats_regular"
        android:text="Verified!!"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/imglock" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nats_regular"
        android:lineHeight="20dp"
        android:text="Hurrah!! You have successfully verified the account."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>