<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_marginBottom="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/in_app_item_cv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#FF816D"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/in_app_item_iv"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:background="@drawable/vector_steps" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/in_app_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03-11-2022"
                android:fontFamily="@font/baloo2"
                android:textColor="#525252"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_marginStart="75dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/in_app_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 PM"
                android:fontFamily="@font/baloo2"
                android:textColor="#8c8c8c"
                android:textSize="9sp"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/in_app_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="notification text"
            android:fontFamily="@font/baloo2"
            android:textColor="#525252"
            android:textSize="11sp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="30dp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>