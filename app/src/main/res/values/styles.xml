<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="counts_style">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:background">@drawable/graph_button</item>
        <item name="android:layout_marginVertical">7dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="enter_food_time">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/nats_regular</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="customSeekbar">
        <item name="colorAccent">#1D5368</item>
        <item name="android:width">10dp</item>
        <item name="android:height">10dp</item>
    </style>

    <style name="day_style">
        <item name="android:textColor">#748D95</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="fontFamily">@font/baloo2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="date_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="fontFamily">@font/baloo2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.PickerWater" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorControlNormal">#76A5FF</item>
    </style>

    <style name="AppTheme.PickerCalorie" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorControlNormal">#FFCE57</item>
    </style>

    <style name="TimePickerWeight" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">#11998E</item>
    </style>

    <style name="TimePickerCalorie" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">#FFCE57</item>
    </style>

    <style name="TimePickerSleep" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">#7B29FF</item>
    </style>

    <style name="TimePickerWater" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">#76A5FF</item>
    </style>

    <style name="TimePickerStep" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">#FF6416</item>
    </style>

    <style name="TextInputLayoutHintText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>
</resources>