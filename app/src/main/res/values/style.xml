<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="account_edt_views">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:fontFamily">@font/nats_regular</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="text_size">14sp</item>
    </style>

    <style name="account_txt_views">
        <item name="android:fontFamily">@font/nats_regular</item>
        <item name="android:textColor">#6A6A6A</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomCalendarMonth" parent="AppTheme">
        <item name="android:textColorPrimary">@color/orange</item>
        <item name="fontFamily">@font/baloo2</item>
    </style>

    <style name="CustomCalendarWeek" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/weightgreen</item>
    </style>

    <style name="diet_chart_week_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/baloo2</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#6F81F8</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="details_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">25dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/nats_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="food_spacing">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nats_regular</item>
        <item name="android:layout_marginHorizontal">25dp</item>
        <item name="android:lineHeight">20dp</item>
    </style>

</resources>