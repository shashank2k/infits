<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F3F9FF" />
            <corners android:radius="50dp" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#DDDDDD"
                android:centerY="0.2"
                android:endColor="#A3FFFFFF"
                android:startColor="#A3777777" />
            <corners android:radius="50dp"/>
        </shape>
    </item>
    </layer-list>