<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FragmentCalorieConsumed">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/calorieImgback"
                    android:layout_width="0dp"
                    android:layout_height="35dp"

                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    app:tint="#F6B566" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:fontFamily="@font/nats_regular"
                    android:text="Calories Consumed"
                    android:textFontWeight="400"
                    android:textColor="#F6B566"
                    android:textSize="38sp"
                    android:textAlignment="center"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal"

                android:layout_height="38dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/day_btn_calorie"
                    android:layout_width="0dp"
                    android:text="Day"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nats_regular"
                    android:textFontWeight="400"
                    android:backgroundTint="#ED9B37"
                    android:outlineProvider="none"
                    android:textAllCaps="false"
                    android:textAlignment="center"

                    android:background="@drawable/btn_background"
                    android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/week_btn_calorie"
                    android:layout_width="0dp"
                    android:text="Week"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:outlineProvider="none"
                    android:textAllCaps="false"
                    android:textAlignment="center"
                    android:fontFamily="@font/nats_regular"
                    android:textFontWeight="400"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/btn_background"
                    android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/year_btn_calorie"
                    android:layout_width="0dp"
                    android:text="Year"
                    android:layout_weight="1"
                    android:outlineProvider="none"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textAlignment="center"

                    android:fontFamily="@font/nats_regular"
                    android:textFontWeight="400"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/btn_background"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="29dp"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nats_regular"
                    android:text="Total Consumed Calories"
                    android:textFontWeight="400"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAlignment="viewStart"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="11dp"
                android:layout_weight="3"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:paddingTop="25dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="0dp"
                        tools:ignore="NestedWeights">
                        <TextView
                            android:id="@+id/totalCalorieValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nats_regular"
                            android:text="825"

                            android:textFontWeight="400"
                            android:textColor="@color/black"
                            android:textSize="45sp"
                            android:gravity="bottom|center"
                            android:textAlignment="gravity"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nats_regular"
                            android:text="kcal"
                            android:layout_marginBottom="20dp"
                            android:textFontWeight="400"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:gravity="bottom|start"
                            android:layout_marginStart="6dp"
                            android:textAlignment="gravity"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <TextView
                        android:id="@+id/caloriedisplaydate"
                        android:layout_width="match_parent"
                        android:text="23 January, 2023"
                        android:fontFamily="@font/nats_regular"
                        android:textSize="18sp"
                        android:textColor="#7E7E7E"
                        android:layout_marginTop="-15dp"
                        android:gravity="top|start"
                        android:textAlignment="gravity"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/piechart"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="29dp"
                android:layout_height="0dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nats_regular"
                    android:text="Main Activities"
                    android:textFontWeight="400"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAlignment="viewStart"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/calorierecycleView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>